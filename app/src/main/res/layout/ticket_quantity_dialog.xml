<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/grey_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:gravity="center_vertical"
                android:text="@string/ticket_number" />

            <Button
                android:id="@+id/ticket_quantity_dialog_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:paddingLeft="@dimen/spacing_xsmall"
                android:paddingRight="@dimen/spacing_xsmall"
                android:text="@string/add_to_cart" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ticket_quantity_dialog_ticket_label"
                android:textColor="@color/primary"
                android:layout_width="match_parent"
                android:text="UEFA BlaBla"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"/>

            <NumberPicker
                android:id="@+id/ticket_quantity_dialog_number"
                android:layout_width="match_parent"
                android:layout_height="70dp"/>

            <TextView
                android:id="@+id/ticket_quantity_dialog_amount"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>